# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
#GET		/users/						controllers.Users.list()
#GET 	/users/new 					controllers.Users.showBlank()
#GET		/users/:ean					controllers.Users.show(ean: Integer)
POST	/users/						controllers.Users.save()
GET		/homePage					controllers.Application.homePage()
GET		/userSetup					controllers.Application.userSetup()
GET		/serchCriteria				controllers.Application.searchCriteria()
GET		/searchResults				controllers.Application.searchResults()
GET 	/viewUserProfile			controllers.Application.viewUserProfile()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
